{% extends 'partial/view.twig' %}
{% set title = 'Product: ' ~ model.product %}
{% block title %}{{parent()}} - {{ title }}{% endblock title %}
{% block photo %}
{% endblock photo %}
{% block headeractions %}


    <div class="buttons left">
        <a href="{{ saurlback !='/' ? saurlback : url( null, { 'action': 'list' } ) }}" class="back btn-icon" title="Back">{{ translate("Back") }}</a>
    </div>

    <div class="title"><h1>{{ title }}</h1></div>
    <div class="editedBy">
    {% if model.toView["changer"] is defined %}
        Last Update: {{ model.changed_dtm|date(constant('\\Wepo\\Constant::DATETIME_FORMAT')) }} by {{ model.changerfname }} {{model.changerlname}}
    {% endif %}
    </div>

    {% if model.status != 'deleted' %}
        <div class="buttons">
            <a href="{{ url( 'orderdetail', { 'action': 'edit', 'orderid':''~model.order_id, 'id':model.id() } )~saurl }}" class="edit btn-icon">
            {{ translate('Edit') }}
            </a>
        </div>
    {% endif %}

    <div class="buttons right">
        <a href="#" class="btn-small previous" title="Previous"></a>
        <a href="#" class="btn-small next" title="Next"></a>
    </div>

{% endblock headeractions %}
{% block actions %}
    <a href="{{ url( 'orderdetail', { 'action': 'edit', 'orderid':''~model.order_id, 'id':model.id() } )~saurl }}" class="edit btn-icon">{{translate('Edit')}}</a>
    <a href="{{ url( 'orderdetail', { 'action': 'delete', 'id':model.id() } )~saurl }}" class="delete btn-icon">{{translate('Delete')}}</a>
{% endblock actions %}
