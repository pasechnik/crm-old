                          var opt = $(this).attr('name');
                              opt = opt.substr(opt.indexOf('[') + 1, opt.length - opt.indexOf('[') - 2);
                          $(this).val(item[opt]);
                        });
                    }
                    else
                    {
                        if ( $("select[name='fields[quote_id]'] option:last").val() !== "" && ('address' in item) )
                        {
                            $("[name='fields[patient_id]'] option:last ").val(null).trigger('change');

