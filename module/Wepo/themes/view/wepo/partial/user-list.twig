{% if key == 'title' %}
    <a href="{{ url( 'common', { 'data':'user', 'view':'view',  'id':avalue.id() }, { 'query': { 'back':saurlhash } } ) }}"><span class="d_title">{{ avalue.title }}</span></a>
{% elseif key == 'login' %}
    {#<a href="{{ url( null, { 'action': 'view','id':avalue.id()} ) }}" >{{ attribute(avalue, key) }}</a>#}
    <a href="{{ url( 'common', { 'data': 'mail','view':'send','to':''~attribute(avalue, 'login')} )~saurl }}" >
        {{attribute(avalue, key)}}
    </a>
{% elseif key == 'changer_id' and attribute(avalue, 'changer_id') is not empty %}
    <a href="{{ url( 'user', { 'action': 'view','id':""~attribute(avalue, 'changer_id')} ) }}" >{{ avalue.changerfname}}
        {{ avalue.changerlname}}</a>

{% elseif key == 'changer_title' and attribute(avalue, 'changer_title') is not empty %}

    <a href="{{ url( 'common', { 'data':'user', 'view':'view',  'id':''~attribute(avalue, 'changer_id') }, { 'query': { 'back':saurlhash } } ) }}">
        {{ avalue.changer_title }}
    </a>

{% elseif key == 'creator_title' and attribute(avalue, 'creator_title') is not empty %}

    <a href="{{ url( 'common', { 'data':'user', 'view':'view',  'id':''~attribute(avalue, 'creator_id') }, { 'query': { 'back':saurlhash } } ) }}">
        {{ avalue.creator_title }}
    </a>

{% elseif key == 'role_id' %}
    {{avalue.role_title}}
{% elseif key == 'status_id' %}
    {{avalue.status}}
{% elseif key[-4:] == '_dtm' and attribute(avalue, key) is not empty %}
    {{ attribute(avalue, key)|date(constant('\\Wepo\\Constant::DATETIME_FORMAT')) }}
{% elseif key[-5:] == '_date' and attribute(avalue, key) is not empty %}
    {{ attribute(avalue, key)|date(constant('\\Wepo\\Constant::DATE_FORMAT')) }}
{% else %}
    {{attribute(avalue, key)}}
{% endif %}
