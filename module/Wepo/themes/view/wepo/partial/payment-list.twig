{% if key == 'title' %}
    <a href="{{ url( 'common', { 'data':'payment', 'view':'view',  'id':avalue.id() }, { 'query': { 'back':saurlhash } } ) }}"><span class="d_title">{{ attribute(avalue, key) }}</span></a>

{% elseif key == 'owner_title' and attribute(avalue, 'owner_title') is not empty %}

    <a href="{{ url( 'common', { 'data':'user', 'view':'view',  'id':''~attribute(avalue, 'owner_id') }, { 'query': { 'back':saurlhash } } ) }}">
        {{ avalue.owner_title }}
    </a>

{% elseif key == 'changer_title' and attribute(avalue, 'changer_title') is not empty %}

    <a href="{{ url( 'common', { 'data':'user', 'view':'view',  'id':''~attribute(avalue, 'changer_id') }, { 'query': { 'back':saurlhash } } ) }}">
        {{ avalue.changer_title }}
    </a>

{% elseif key == 'status_id' %}
    {{ attribute(avalue, "status") }}

{% elseif key == 'patient_title' %}
    <a href="{{ url( 'common', { 'data':'patient', 'view':'view', 'id':''~attribute(avalue, 'patient_id')}, { 'query': { 'back':saurlhash } } ) }}">{{ attribute(avalue, key) }}</a>

{% elseif key == 'client_id' and attribute(avalue, 'client_id') is not empty %}
    <a href="{{ url( 'client', { 'action': 'view','id':''~attribute(avalue, 'client_id')} )~saurl }}" >{{ attribute(avalue, "client") }}</a>
{% elseif key == 'contact' and attribute(avalue, 'contact_id') is not empty %}
    <a href="{{ url( 'contact', { 'action': 'view','id':''~attribute(avalue, 'contact_id')} )~saurl }}" >{{ attribute(avalue, "contact") }}</a>
{% elseif key == 'invoice_title' and attribute(avalue, 'invoice_id') is not empty %}
    <a href="{{ url( 'common', { 'data':'invoice', 'view':'view',  'id':''~attribute(avalue, 'invoice_id') }, { 'query': { 'back':saurlhash } } ) }}">{{ attribute(avalue, "invoice_title") }}</a>
{% elseif key[-4:] == '_dtm' and attribute(avalue, key) is not empty %}
    {{ attribute(avalue, key)|date(constant('\\Wepo\\Constant::DATETIME_FORMAT')) }}
{% elseif key[-5:] == '_date' and attribute(avalue, key) is not empty %}
    {{ attribute(avalue, key)|date(constant('\\Wepo\\Constant::DATE_FORMAT')) }}
{% elseif key == 'sum' %}
    ${{ attribute(avalue, key)|number_format(2, '.', ',') }}
{% else %}
    {{ attribute(avalue, key) }}
{% endif %}
