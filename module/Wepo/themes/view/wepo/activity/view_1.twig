{% extends 'layout/layout.twig' %}
{% set title = translate('Activity info') %}
{% block title %}{{parent()}} - {{ title }}{% endblock title %}
{% block content %}
<h1>{{title}}</h1>
<div>
    <table border=2 width=400>
        <tr>
           <th colspan="2" align="center">
               {{translate('Activity: '~table)}}
           </th>
       </tr>
    {% for key, value in activity.toView %}
       <tr align="left">
           <th>&nbsp&nbsp{{field_labels[key]}}</th>
           <td>&nbsp;&nbsp;{{value}}</td>
       </tr>
    {% endfor %}
       <tr>
           <th colspan='2'><a href="{{ url( 'activity', { 'action': 'edit'~table,'id':activity.id } )~saurl }}">{{translate('Edit')}}</a></th>
       </tr>
        </table>
        <br/>
    </div>
<a href="{{ url( 'activity', { 'action': 'list' } ) }}">{{translate('Back to activities')}}</a>
{% endblock content %}
