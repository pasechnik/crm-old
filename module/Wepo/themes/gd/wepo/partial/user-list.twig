{% if key == 'title' %}
    <a href="{{ url( null, { 'action': 'view','id':avalue.id()} )~saurl }}" >{{ avalue.fname ~ ' ' ~ avalue.lname }}</a>
    {# {% elseif key == 'email' and attribute(avalue, 'email') is not empty %} #}
    {# <a href="{{ url( 'mail', { 'action': 'add','email':''~attribute(avalue, key)} )~saurl }}" >{{attribute(avalue, key)}}</a> #}
{% elseif key == 'login' %}
    <a href="{{ url( null, { 'action': 'view','id':avalue.id()} ) }}" >{{ attribute(avalue, key) }}</a>
{% elseif key == 'changer_id' and attribute(avalue, 'changer_id') is not empty %}
    <a href="{{ url( 'user', { 'action': 'view','id':""~attribute(avalue, 'changer_id')} ) }}" >{{ avalue.changerfname}}
        {{ avalue.changerlname}}</a>
{% elseif key == 'role_id' %}
    {{avalue.role}}
{% elseif key == 'status_id' %}
    {{avalue.status}}
{% elseif key[-4:] == '_dtm' %}
    {{attribute(avalue, key)|date(constant('\\Wepo\\Constant::DATETIME_FORMAT'))}}
{% elseif key[-5:] == '_date' %}
    {{attribute(avalue, key)|date(constant('\\Wepo\\Constant::DATE_FORMAT'))}}
{% else %}
    {{attribute(avalue, key)}}
{% endif %}
