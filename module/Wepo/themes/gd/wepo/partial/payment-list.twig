{% if key == 'description' %}
    <a href="{{ url( null, { 'action': 'view','id':avalue.id()} )~saurl }}" >{{ attribute(avalue, key) }}</a>
{% elseif key == 'created_dtm' %}
    {{ attribute(avalue, key)|date('d.m.y H:m') }}
{% elseif key == 'owner_id' and attribute(avalue, 'owner_id') is not empty %}
    <a href="{{ url( 'user', { 'action': 'view','id':''~attribute(avalue, 'owner_id')} )~saurl }}" >
        {{ avalue.ownerfname}}
        {{ avalue.ownerlname}}
    </a>
{% elseif key == 'status_id' %}
    {{ attribute(avalue, "status") }}
{% elseif key == 'client_id' and attribute(avalue, 'client_id') is not empty %}
    <a href="{{ url( 'client', { 'action': 'view','id':''~attribute(avalue, 'client_id')} )~saurl }}" >{{ attribute(avalue, "client") }}</a>
{% elseif key == 'contact_id' and attribute(avalue, 'contact_id') is not empty %}
    <a href="{{ url( 'contact', { 'action': 'view','id':''~attribute(avalue, 'contact_id')} )~saurl }}" >{{ attribute(avalue, "contact") }}</a>
{% elseif key == 'invoice_id' and attribute(avalue, 'invoice_id') is not empty %}
    <a href="{{ url( 'invoice', { 'action': 'view','id':''~attribute(avalue, 'invoice_id')} )~saurl }}" >{{ attribute(avalue, "invoice") }}</a>
{% elseif key[-4:] == '_dtm' %}
    {{attribute(avalue, key)|date(constant('\\Wepo\\Constant::DATETIME_FORMAT'))}}
{% elseif key[-5:] == '_date' %}
    {{attribute(avalue, key)|date(constant('\\Wepo\\Constant::DATE_FORMAT'))}}
{% elseif key == 'sum' %}
    ${{ attribute(avalue, key)|number_format(2, '.', ',') }}
{% else %}
    {{ attribute(avalue, key) }}
{% endif %}
