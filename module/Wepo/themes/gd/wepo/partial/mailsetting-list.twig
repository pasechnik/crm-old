{% if key == 'email' %}
    <a href="{{ url( null, { 'action': 'view','id':avalue.id()} )~saurl }}" >{{ attribute(avalue, key) }}</a>
{% elseif key == 'changer_id' and attribute(avalue, 'changer_id') is not empty %}
    <a href="{{ url( 'user', { 'action': 'view','id':''~attribute(avalue, 'changer_id')} )~saurl }}" >
        {{ avalue.changerfname}}
        {{ avalue.changerlname}}
    </a>
{% elseif key == 'owner_id' and attribute(avalue, 'owner_id') is not empty %}
    <a href="{{ url( 'user', { 'action': 'view','id':''~attribute(avalue, 'owner_id')} )~saurl }}" >
        {{ avalue.ownerfname}}
        {{ avalue.ownerlname}}
    </a>
{% elseif key == 'status_id' %}
    {{ attribute(avalue, "status") }}
{% elseif key == 'user_id' and attribute(avalue, 'user_id') is not empty %}
    <a href="{{ url( 'user', { 'action': 'view','id':''~attribute(avalue, 'user_id')} )~saurl }}" >{{ attribute(avalue, "user") }}</a>
{% elseif key == 'contact' and attribute(avalue, 'contact_id') is not empty %}
    <a href="{{ url( 'contact_id', { 'action': 'view','id':''~attribute(avalue, 'contact_id')} )~saurl }}" >{{ attribute(avalue, "contact") }}</a>
{% elseif key[-4:] == '_dtm' %}
    {{attribute(avalue, key)|date(constant('\\Wepo\\Constant::DATETIME_FORMAT'))}}
{% elseif key[-5:] == '_date' %}
    {{attribute(avalue, key)|date(constant('\\Wepo\\Constant::DATE_FORMAT'))}}
{% else %}
    {{ attribute(avalue, key) }}
{% endif %}
