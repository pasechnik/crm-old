</head>
<body>
    {% block header %}
        <div id="header" class="header">

            <div id="headerBlock">
                <div class="left_header">
                    <div class="logo"><a href="/" class="imgTxt txtLogo"></a></div>
                    <div class="search_form" id="search_form">
                        <form action="{{ url( 'search', {'q':search_query} )~saurl }}" method="get" name="main_search" id="main_search">
                            <div class="input">
                                {#<label for="search_query">Search</label>#}
                                <input class="form-control" type="text" name="q" id="search_query" value=""
                                       placeholder="Global search {{ search_query ? 'for "'~search_query~'"': '' }}"/>
                            </div>
                            <div class="button" id="search_button" style="z-index:10">
                                <a href="/" class="imgTxt txtSearch submitLink" title="Global search">Search</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="right_header">

                    {% if user.id() %}
                        <div class="login_block">
                            {#                  <img src="/img/user.jpg" alt="{{ user.fname }} {{ user.lname }}"/>#}
                            <img style="width: auto; max-width: 40px;  height: auto; max-height: 40px"
                                 src="{{ WepoLink(mainuser.company_id, user, 'avatar') }}"
                                 alt="{{ user.fname }} {{ user.lname }}"/>

                            <div class="with_subLinks">
                                {#<a href="{{ url( 'user', { 'action': 'view','id':user.id() } )~saurl }}">{{ user.fname }} {{ user.lname }} <span class="link_arr"></span></a>#}
                                <a href="#">{{ user.fname }} {{ user.lname }} <span class="link_arr"></span></a>

                                <div class="subLinks">
                                    <span class="imgTxt txtArrow"></span>
                                    <ul>
                                        <li><a href="{{ url( 'user', { 'action': 'view','id':user.id() } )~saurl }}">{{ translate('View profile') }}</a></li>
                                            {#<li><a href="{{ url( 'user', { 'action': 'edit','id':user.id() } )~saurl }}">{{ translate('Edit profile') }}</a></li>#}
                                        <li><a href="{{ url( 'index', { 'action': 'signout' } ) }}">{{ translate('Exit') }}</a></li>
                                    </ul>
                                </div>
                            </div>

                        </div>
                    {% endif %}

                    <div class="header_links clearfix">
                        <div class="with_subLinks">
                            <a href="#">Help<span class="link_arr"></span></a>
                            <div class="subLinks">
                                <span class="imgTxt txtArrow"></span>
                                <ul>
                                    <li><a href="{{ url( 'help', { 'action': 'manual' } ) }}">Manual</a></li>
                                    <li><a href="{{ url( 'help', { 'action': 'faq' } ) }}">FAQ</a></li>
                                        {#<li><a href="#">Forum</a></li>#}
                                        {#<li><a href="#">Blog</a></li>#}
                                        {#<li><a href="#">Support</a></li>#}
                                </ul>
                            </div>
                        </div>
                        <a href="{{ url( 'setup', { 'action': 'index'} )~saurl }}">{{translate('Setup')}}</a>
                    </div>
                </div>
            </div>
            <div id="mainMenu" class="menu">
                {% autoescape false %}
                    {{ navigation('Navigation').myMenu.setUlClass('clearfix').setMinDepth(0).escapeLabels(false).setAddClassToListItem( true ).render }}
                {% endautoescape %}
            </div>
        </div>
        <!-- /div#header.header -->
    {% endblock header %}

    <div class="content">
        <!-- content|raw is required for phtml fallback -->
        {# <h1>{{title}}</h1>
        <div class="right_top_links">
            <a href="#"><i class="imgTxt txtHelp"></i>Help fot this page</a>
        </div>
        #}
        {% block content %}{{ content|raw }}{% endblock content %}

    </div>
    <!-- /content -->

    {% block globalfooter %}
        <footer>
            <div class="footer">
                {% block footer %}{% endblock footer %}
                <p>&copy; 2014 by WepoCRM {#{{ translate('All rights reserved.') }}#}</p>
                Zend Framework {{ constant('\\Zend\\Version\\Version::VERSION') }}
            </div>
        </footer>
    {% endblock globalfooter %}
{% block inline %}{% endblock inline %}
</body>
</html>
