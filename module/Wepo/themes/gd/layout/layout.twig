<script>
    $( document ).ready( function() {
        $( '#search_form' ).keydown( function( event ) {
            if ( event.keyCode == 13 ) {
                $( '#main_search' ).submit();
            }
        }
        );
        $( '#search_button' ).mousedown( function( event ) {
            $( '#main_search' ).submit();
        }
        );
//                 var inp = $('#search_query')[0].selectize.on( "click", function() { alert( 'On click trigger' ) });
//                 $('#search_query')[0].selectize.trigger('click');
    } );
</script>


