<!-- PurchaseOrder Template -->

<table style="background: none repeat scroll 0% 0% rgb(255, 255, 255); padding: 2px;" border="0" cellpadding="0"
       cellspacing="0" width="100%">
    <tbody>
    <tr>
        <td>
            <table
                style="border-left: 1px solid rgb(218, 218, 218); border-right: 4px solid rgb(218, 218, 218); border-width: 1px 4px 4px 1px; border-style: solid; border-color: rgb(218, 218, 218); padding: 10px; background-color: white;"
                border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                <tr>
                    <td valign="top">
                        <table style="font-size: 18px;" border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tbody>
                            <tr>
                                <td align="left" valign="top">${companyLogo}</td>
                                <td style="font-size: 12px; color: black;" align="left" valign="Bottom"><span
                                        style="font-size: 16px; color: black; font-weight: bold;">${Organization.Organization Name}</span><br>${Organization.Street}<br>${Organization.City}<br>${Organization.State}<br>${Organization.Country}
                                    ${Organization.Zip Code}
                                </td>
                                <td style="font-size: 12px; color: black;" align="right" valign="Bottom"><span
                                        style="font-size: 20px; font-weight: bold;">Purchase Order</span><br><span
                                        style="font-size: 12px; color: black;">PO Date: ${PurchaseOrders.PO Date}</span><br><span
                                        style="font-size: 12px; color: black;">Purchase Order Number : ${PurchaseOrders.PO Number}</span><br>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tbody>
                            <tr>
                                <td style="border: 2px solid rgb(232, 232, 232); color: rgb(0, 0, 0);" valign="top"
                                    width="50%"><b>BILL TO:</b><br><br><b>${PurchaseOrders.Billing Street}</b><br>${PurchaseOrders.Billing
                                    City}<br>${PurchaseOrders.Billing State}<br>${PurchaseOrders.Billing Country}<br>${PurchaseOrders.Billing
                                    Code}<br></td>
                                <td style="border: 2px solid rgb(232, 232, 232); color: rgb(0, 0, 0);" valign="top"
                                    width="50%"><b>SHIP TO:</b><br><br><b>${PurchaseOrders.Shipping Street}</b><br>${PurchaseOrders.Shipping
                                    City}<br>${PurchaseOrders.Shipping State}<br>${PurchaseOrders.Shipping Country}<br>${PurchaseOrders.Shipping
                                    Code}<br></td>
                            </tr>
                            </tbody>
                        </table>
                        <br><br>
                        <table style="font-family: Arial,Helvetica,sans-serif; font-size: 11px; color: rgb(0, 0, 0);"
                               border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tbody>
                            <tr>
                                <td style="border-top: 2px solid gray; text-align: right; width: 20%; background-color: rgb(242, 242, 242);">
                                    Vendor Name:
                                </td>
                                <td style="border-top: 2px solid gray; width: 30%; font-weight: bold; border-bottom: 1px solid rgb(234, 234, 234);">
                                    ${PurchaseOrders.Vendor Name}&nbsp;</td>
                                <td style="border-top: 2px solid gray; text-align: right; width: 20%; background-color: rgb(242, 242, 242);">
                                    Due Date
                                </td>
                                <td style="border-top: 2px solid gray; width: 30%; font-weight: bold; border-bottom: 1px solid rgb(234, 234, 234);">
                                    ${PurchaseOrders.Due Date}&nbsp;</td>
                            </tr>
                            <tr>
                                <td style="text-align: right; width: 20%; background-color: rgb(242, 242, 242);">Contact
                                    Name:
                                </td>
                                <td style="width: 30%; font-weight: bold; border-bottom: 1px solid rgb(234, 234, 234);">
                                    ${PurchaseOrders.Contact Name}&nbsp;</td>
                                <td style="text-align: right; width: 20%; background-color: rgb(242, 242, 242);"></td>
                                <td style="width: 30%; font-weight: bold; border-bottom: 1px solid rgb(234, 234, 234);">
                                    &nbsp;</td>
                            </tr>
                            </tbody>
                        </table>
                        <br><br>
                        <table style="font-family: Arial,Helvetica,sans-serif; font-size: 11px; color: rgb(0, 0, 0);"
                               border="0" cellpadding="0" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <td style="font-weight: bold; background-color: rgb(234, 234, 234); border-top: 2px solid gray;">
                                    Product Name
                                </td>
                                <td style="font-weight: bold; background-color: rgb(234, 234, 234); border-top: 2px solid gray;">
                                    Product Code
                                </td>
                                <td style="font-weight: bold; background-color: rgb(234, 234, 234); border-top: 2px solid gray;">
                                    Qty
                                </td>
                                <td style="font-weight: bold; background-color: rgb(234, 234, 234); border-top: 2px solid gray;"
                                    align="right">List Price
                                </td>
                                <td style="font-weight: bold; background-color: rgb(234, 234, 234); border-top: 2px solid gray;"
                                    align="right">Total
                                </td>
                            </tr>
                            </thead>
                            <tbody id="lineItem">
                            <tr>
                                <td style="border-bottom: 2px dotted rgb(218, 218, 218);"><b>${Products.Product
                                        Name}</b></td>
                                <td style="border-bottom: 2px dotted rgb(218, 218, 218);" valign="top">&nbsp;${Products.Product
                                    Code}
                                </td>
                                <td style="border-bottom: 2px dotted rgb(218, 218, 218);" valign="top">
                                    ${PurchaseOrders.Qty}
                                </td>
                                <td style="border-bottom: 2px dotted rgb(218, 218, 218);" align="right" valign="top">
                                    ${PurchaseOrders.List Price}
                                </td>
                                <td style="border-bottom: 2px dotted rgb(218, 218, 218);" align="right" valign="top">
                                    ${PurchaseOrders.Total}
                                </td>
                            </tr>
                            </tbody>
                            <tbody>
                            <tr>
                                <td colspan="4" align="right">Sub Total</td>
                                <td align="right"><b>${PurchaseOrders.Sub Total}</b></td>
                            </tr>
                            <tr>
                                <td colspan="4" align="right">Tax</td>
                                <td align="right">${PurchaseOrders.Tax}</td>
                            </tr>
                            <tr>
                                <td colspan="4" align="right">Adjustment</td>
                                <td align="right">${PurchaseOrders.Adjustment}</td>
                            </tr>
                            <tr>
                                <td colspan="4" style="border-bottom: 2px solid rgb(204, 204, 204);" align="right"><b>Grand
                                        Total</b></td>
                                <td style="border-bottom: 2px solid rgb(204, 204, 204); border-top: 2px solid rgb(218, 218, 218);"
                                    align="right"><b>${PurchaseOrders.Grand Total}</b></td>
                            </tr>
                            </tbody>
                        </table>
                        <br><br>
                        <table border="0" cellpadding="5" cellspacing="0" width="100%">
                            <tbody>
                            <tr>
                                <td style="color: gray; border-top: 2px solid gray;"><b>Terms and Conditions </b></td>
                            </tr>
                            <tr>
                                <td>
                                    <pre style="color: gray;" wrap="soft">${PurchaseOrders.Terms and Conditions}</pre>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
    </tbody>
</table>
