{% extends 'partial/list.twig' %}

{% set title = translate('Email settings') %}

{% block data %}
    {% include 'partial/mailsetting-list.twig' %}
{% endblock data %}

{% block leftlink %}
    <a class="btn-icon mailSendSetting" href="{{ url( null, { 'action': 'addSend' } ) }}"title="{{ translate('New send setting') }}">New Send Setting</a>
    <a class="btn-icon mailReceiveSetting" href="{{ url( null, { 'action': 'addReceive' } ) }}" title="{{ translate('New receive setting') }}">New Receive Setting</a>
{% endblock leftlink %}


{% block right_top_links %}
        <div style = "float: right; margin:0 0 0 12px;">
            <div  class="buttons clearfix" >
                {% if saurlback !='/' %}
                    <a href="{{ saurlback }}">{{ translate('Cancel') }}</a>
                {% else %}
                    <a href="{{ url( 'setup', { 'action': 'list' } ) }}">{{translate('Cancel')}}</a>
                {% endif %}
            </div>
        </div>
{% endblock right_top_links %}

{% block action %}
    <a class="actionview" href="{{ url( null, { 'action': 'view','id':avalue.id() } )~saurl }}"><img src="/img/1.png" class="view" /><span class="tooltip top">View</span></a>&nbsp;
    <a class="actionview" href="{{ url( null, { 'action': 'edit','id':avalue.id() } )~saurl }}"><img src="/img/1.png" class="edit" /><span class="tooltip top">Edit</span></a>&nbsp;
{#    <a class="actionview" href="{{ url( null, { 'action': 'delete','id':avalue.id() } )~saurl }}"><img src="/img/1.png" class="delete" /><span class="tooltip top">Delete</span></a>#}
    <a class="actionview"><img src="/img/1.png" class="delete single_del" /><span class="tooltip top">Delete</span></a>
{% endblock action %}
